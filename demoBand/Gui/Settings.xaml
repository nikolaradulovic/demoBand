                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="PointerOver"/>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </Image>
        </ControlTemplate>
        <ControlTemplate x:Key="ButtonControlTemplate2" TargetType="Button">
            <Image x:Name="image" Source="../Assets/Images/Dashboard/Buttons/dashboard_0006_Stop.png" Height="50">
                <VisualStateManager.VisualStateGroups>

                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="PointerOver"/>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </Image>
        </ControlTemplate>
    </Page.Resources>
    <Grid>
        
        <Grid.Background>
            <ImageBrush ImageSource="../Assets/Images/MySongs/mysongs.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <AppBarButton Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Icon="Back" x:Name="btnBack" Click="btnBack_Click"/>
        
        
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Audio settings:" VerticalAlignment="Bottom" FontSize="42"/> 
            <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock  Text="Choose your instrument:" FontSize="20"/>
                <ComboBox Height="30" Width="200" Margin="30,0,0,0" SelectedIndex="0" HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="cmbInstrumentPicker" FontSize="20" SelectionChanged="cmbInstrumentPicker_SelectionChanged">
                    <ComboBoxItem Content="Voice"/>
                    <ComboBoxItem Content="Guitar"/>
                    <ComboBoxItem Content="Piano"/>
                    <ComboBoxItem Content="Drums"/>
                </ComboBox>
            </StackPanel>
            <StackPanel VerticalAlignment="Center" Grid.Row="2" Orientation="Horizontal">
                <MediaElement x:Name="playerRec" AutoPlay="False"/>
                <TextBlock VerticalAlignment="Center" Text="Your sound:" FontSize="20"/>
                <Button Margin="30,0,0,0" HorizontalAlignment="Center" x:Name="btnRecord"  Template="{StaticResource ButtonControlTemplate1}" Click="btnRecord_Click"/>
                <Button Margin="30,0,0,0" HorizontalAlignment="Center" x:Name="btnStop" Template="{StaticResource ButtonControlTemplate2}" Click="btnStop_Click"/>
                <Button Margin="30,0,0,0" HorizontalAlignment="Center" x:Name="btnPlay" Template="{StaticResource ButtonControlTemplate4}" Click="btnPlay_Click"/>
            </StackPanel>
            <StackPanel Grid.Row="3" VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock Text="Test sample:" VerticalAlignment="Center" FontSize="20"/>
                <MediaElement x:Name="playerSample" AutoPlay="False"/>
                <Button Margin="30,0,0,0" HorizontalAlignment="Center" x:Name="btnPlaySample"  Template="{StaticResource ButtonControlTemplate4}" Click="btnPlaySample_Click"/>
                <Button Margin="30,0,0,0" HorizontalAlignment="Center" x:Name="btnStopSample"  Template="{StaticResource ButtonControlTemplate2}" Click="btnStopSample_Click"/>
            </StackPanel>
            <StackPanel Grid.Row="4" VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="Set up your volume:" FontSize="20"/>
                <Slider Margin="30,0,0,0" Value="100" Height="40" Width="150" x:Name="sliderVolume" ValueChanged="sliderVolume_ValueChanged"  />
            </StackPanel>
            <StackPanel Grid.Row="5">
                <Button x:Name="btnSave" Content="Save" FontSize="20" Background="DodgerBlue" Click="btnSave_Click"/>    
            </StackPanel>
            </Grid>
    </Grid>
</Page>
